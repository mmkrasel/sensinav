                android:padding="10sp"
                android:textSize="10sp"
                android:layout_weight="2"
                android:gravity="center_horizontal"/>

            <TextView
                android:id="@+id/Y"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="1m"
                android:padding="10sp"
                android:textSize="10sp"
                android:layout_weight="2"
                android:gravity="center_horizontal"/>

            <TextView
                android:id="@+id/Z"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="1m"
                android:padding="10sp"
                android:textSize="10sp"
                android:layout_weight="2"
                android:gravity="center_horizontal"/>
        </TableRow>
    </TableLayout>


